<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frag2_Test">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/questionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/ques_ans"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/question"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/ques"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="18dp"
                    android:src="@drawable/test2" />


            </RelativeLayout>

            <Button
                android:id="@+id/idBtnOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/testbtn"
                android:elevation="10dp"
                android:fontFamily="sans-serif-light"
                android:padding="10dp"
                android:text="Option 1"
                android:textAllCaps="false"
                android:textColor="#2d2f30"
                android:textSize="15sp" />

            <Button
                android:id="@+id/idBtnOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/testbtn"
                android:elevation="10dp"
                android:fontFamily="sans-serif-light"
                android:padding="10dp"
                android:text="Option 2"
                android:textAllCaps="false"
                android:textColor="#2d2f30"
                android:textSize="15sp" />

            <Button
                android:id="@+id/idBtnOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/testbtn"
                android:elevation="10dp"
                android:fontFamily="sans-serif-light"
                android:padding="10dp"
                android:text="Option 3"
                android:textAllCaps="false"
                android:textColor="#2d2f30"
                android:textSize="15sp" />

            <Button
                android:id="@+id/idBtnOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/testbtn"
                android:elevation="10dp"
                android:fontFamily="sans-serif-light"
                android:padding="10dp"
                android:text="Option 4"
                android:textAllCaps="false"
                android:textColor="#2d2f30"
                android:textSize="15sp" />



            <Button
                android:id="@+id/idBtnOption5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/testbtn"
                android:elevation="10dp"
                android:fontFamily="sans-serif-light"
                android:padding="10dp"
                android:text="Option 5"
                android:textAllCaps="false"
                android:textColor="#2d2f30"
                android:textSize="15sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:src="@drawable/test" />

    </RelativeLayout>




</FrameLayout>