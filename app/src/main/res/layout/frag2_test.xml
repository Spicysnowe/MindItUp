<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgs"
    tools:context=".Frag2_Test">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/questionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/ques_ans"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="@string/ques"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/idBtnOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Option 1"
                android:textColor="#2d2f30"
                android:fontFamily="sans-serif-light"
                android:textAllCaps="false"
                android:textSize="15sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Option 2"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="#2d2f30"
                android:fontFamily="sans-serif-light"
                android:id="@+id/idBtnOption2"                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Option 3"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:id="@+id/idBtnOption3"
                android:textColor="#2d2f30"
                android:fontFamily="sans-serif-light"
                />

            <Button
                android:id="@+id/idBtnOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Option 4"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="#2d2f30"
                android:fontFamily="sans-serif-light" />

            <Button
                android:id="@+id/idBtnOption5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Option 5"
                android:textColor="#2d2f30"
                android:fontFamily="sans-serif-light"
                android:textAllCaps="false"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>