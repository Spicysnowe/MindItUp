<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frag1_GetStarted">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp">


       <ImageView
           android:layout_width="178dp"
           android:layout_height="422dp"
           android:layout_alignParentEnd="true"
           android:layout_marginTop="-75dp"
           android:layout_marginEnd="-3dp"
           android:src="@drawable/brainicon" />

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="245dp"
           android:src="@drawable/highlight" />


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_alignParentBottom="true"
           android:layout_marginLeft="175dp"
           android:layout_marginTop="10dp"
           android:layout_marginEnd="316dp"
           android:layout_marginBottom="43dp"
           android:fontFamily="sans-serif-medium"
           android:text="@string/skip"
           android:textColor="#93979A"
           android:textSize="20sp"
           />

       <TextView
           android:layout_width="324dp"
           android:layout_height="172dp"
           android:layout_alignParentStart="true"
           android:layout_alignParentBottom="true"
          android:paddingLeft="10dp"
           android:layout_marginBottom="236dp"
           android:lineSpacingMultiplier="1.1"
           android:text="Before we start our journey together, let us know you better so that we can treat you in the best way we can. "
           android:textColor="@color/black"
           android:textSize="24sp"
           android:textStyle="bold" />

       <ImageButton
           android:id="@+id/startAssessment"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_alignParentEnd="true"
           android:layout_alignParentBottom="true"
           android:layout_marginEnd="27dp"
           android:layout_marginBottom="28dp"
           android:backgroundTint="@color/white"
           android:src="@drawable/arrow" />



   </RelativeLayout>





</FrameLayout>